<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sqlite.sqliteMain">

    <!--标题部分-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="图书信息管理系统"
        android:textSize="30sp" />

    <!--编辑部分-->
    <TableLayout
        android:id="@+id/main_layout_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <!--书名-->
        <TableRow>

            <TextView
                android:layout_margin="10dp"
                android:gravity="center|right"
                android:text="书名" />

            <EditText
                android:id="@+id/main_bookname"
                android:layout_width="200dp"
                android:layout_margin="10dp"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_margin="10dp"
                android:gravity="center|right"
                android:text="作者" />

            <EditText
                android:id="@+id/main_writer"
                android:layout_width="200dp"
                android:layout_margin="10dp"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_margin="10dp"
                android:gravity="center|right"
                android:text="出版社" />

            <EditText
                android:id="@+id/main_press"
                android:layout_width="200dp"
                android:layout_margin="10dp"
                android:inputType="text" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_margin="10dp"
                android:gravity="center|right"
                android:text="价格" />

            <EditText
                android:id="@+id/main_price"
                android:layout_width="200dp"
                android:layout_margin="10dp"
                android:inputType="text" />

        </TableRow>
    </TableLayout>

    <!--按钮部分-->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_layout_mid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TableRow>

            <Button
                android:id="@+id/main_btn_query"
                android:layout_width="80dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="查询" />

            <Button
                android:id="@+id/main_btn_add"
                android:layout_width="80dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="添加" />

            <Button
                android:id="@+id/main_btn_exit"
                android:layout_width="80dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="退出" />

        </TableRow>

    </TableLayout>
</RelativeLayout>